{
  "name": "@element-ts/lithium",
  "version": "0.1.4",
  "description": "A type-safe remote function invocation library using websockets and TypeScript.",
  "keywords": [
    "websocket",
    "socket",
    "remote",
    "function",
    "invoke",
    "RFI",
    "typescript",
    "broadcast",
    "peer-to-peer",
    "PTP"
  ],
  "main": "js/index",
  "types": "dts/index",
  "files": [
    "js",
    "dts"
  ],
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepublishOnly": "npm run compile",
    "compile": "npm run clean && /usr/local/bin/tsc -p tsconfig.json",
    "watch": "tsc -w -p .",
    "clean": "rm -rf js && rm -rf dts",
    "start": "node js/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/element-ts/lithium.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "author": "Elijah Cobb <elijah@elijahcobb.com> (https://elijahcobb.com/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/element-ts/lithium/issues"
  },
  "homepage": "https://github.com/element-ts/lithium#readme",
  "dependencies": {
    "@element-ts/neon": "^1.0.3",
    "@element-ts/oxygen": "latest",
    "@elijahjcobb/better-json": "latest",
    "@elijahjcobb/prom-type": "latest",
    "@types/ws": "^7.2.6",
    "ws": "^7.3.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.3",
    "@types/node": "^14.0.14",
    "jest": "^26.1.0",
    "tslint": "^6.1.2",
    "typescript": "^3.9.5"
  }
}
